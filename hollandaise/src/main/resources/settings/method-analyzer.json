{
   "index":{
      "number_of_shards":1,
      "number_of_replicas":0
   },
   "analysis":{
      "analyzer":{
         "method_name_analyzer":{
            "tokenizer":"camel_case_tokenizer",
            "filter":[
               "lowercase"
            ]
         },
         "method_name_ngram_analyzer":{
            "tokenizer":"camel_case_tokenizer",
            "filter":[
               "lowercase",
               "edge_ngram_filter"
            ]
         }
      },
      "tokenizer":{
         "camel_case_tokenizer":{
            "type":"pattern",
            "pattern":"([^\\p{L}\\d]+)|(?<=\\D)(?=\\d)|(?<=\\d)(?=\\D)|(?<=[\\p{L}&&[^\\p{Lu}]])(?=\\p{Lu})|(?<=\\p{Lu})(?=\\p{Lu}[\\p{L}&&[^\\p{Lu}]])"
         }
      },
      "filter":{
         "edge_ngram_filter":{
            "type":"edge_ngram",
            "min_gram":2,
            "max_gram":10
         }
      }
   }
}